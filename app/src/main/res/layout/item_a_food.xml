<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lighter_gray"
    android:orientation="vertical"
    app:cardElevation="@dimen/cardview_elvation"
    android:layout_margin="@dimen/cardview_magin"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_top_store"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/item_catalog_padding_top"
        android:paddingTop="@dimen/item_catalog_padding_top"

        >
        <ImageView
            android:id="@+id/list_img_food"
            android:layout_width="@dimen/image_food_height"
            android:layout_height="@dimen/image_food_height"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_left_mark"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6">

                <TextView
                    android:id="@+id/txt_list_food_name"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:text="Cơm gà xối mỡ"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    app:srcCompat="@drawable/circle_green"
                    android:layout_gravity="center"
                    android:id="@+id/icon_stt" />
            </LinearLayout>
            <TextView
                android:id="@+id/item_food_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="25,000 VNĐ"
                android:textColor="@color/first_orange_color"
                android:textStyle="bold"
                android:paddingTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_distance" android:layout_marginRight="@dimen/padding_top_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_address" />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>